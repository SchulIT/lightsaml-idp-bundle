{
    "name": "schulit/lightsaml-idp-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^7.4.1|^8.0",
        "ext-iconv": "*",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^5.4|^6.0",
        "symfony/yaml": "^5.4|^6.0",
        "lightsaml2/lightsaml-idp": "^2.0",
        "symfony/security-core": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "SchulIT\\LightSamlIdpBundle\\": ""
        }
    },
    "autoload-dev": {
